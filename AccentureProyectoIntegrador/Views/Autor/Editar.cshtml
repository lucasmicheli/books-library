@model AccentureProyectoIntegrador.Models.Autores

@{
    ViewBag.Title = "Editar Autor";
}


@using (Html.BeginForm())
{
    @Html.HiddenFor(autor => autor.IdAutor);
    @Html.LabelFor(autor => autor.NombreAutor)
    @Html.EditorFor(autor => autor.NombreAutor,
    new
    {
            htmlAttributes = new
            {
                @class = "form-control",
            placerholder = "Ingrese nombre del autor:"
        }
    })

    <button class="btn btn-primary form-control" style="margin-top:1em">
        Aceptar
    </button>

}

